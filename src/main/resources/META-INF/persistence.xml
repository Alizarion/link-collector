<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!-- productionParam -->
    <persistence-unit name="linkCollectorPU" transaction-type="JTA">
        <jta-data-source>java:/myProjectDS</jta-data-source>

        <class>com.project.entities.MetaTag</class>
        <class>com.project.entities.PersistentEntry</class>
        <class>com.project.entities.Container</class>
        <class>com.project.entities.Link</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.max_fetch_depth" value="1"/>
            <property name="hibernate.jdbc.batch_size" value="32" />

            <!-- uncomment this to delegate hibernate to create the database-->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
            <property name="hibernate.default_batch_fetch_size" value="16" />
            <property name="hibernate.show_sql" value="false" />
        </properties>
    </persistence-unit>
</persistence>